<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cual es la bandera de..."
        android:textSize="50sp"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="63dp" />

    <ImageButton
        android:id="@+id/imgb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="presion"
        android:tag="Corea"
        app:srcCompat="@drawable/bandera1"
        android:contentDescription="Bandera 1" />

    <ImageButton
        android:id="@+id/imgb2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="presion"
        android:tag="Japon"
        app:srcCompat="@drawable/bandera2"
        android:contentDescription="Bandera 2"/>

    <ImageButton
        android:id="@+id/imgb3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="presion"
        android:tag="China"
        app:srcCompat="@drawable/bandera3"
        android:contentDescription="Bandera 3"/>

</LinearLayout>